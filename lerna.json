{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "version": {
        "allowBranch": "master",
        "exact": true,
        "ignoreChanges": [
            "**/*.md"
        ],
        "message": "build: release version %v"
    }
}
}
